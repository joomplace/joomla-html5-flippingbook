<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="social_twitter_use"
			type="radio"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_USE"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_twitter_size"
			type="_advanced_radio"
			onclick="onRadioTwitterSizeClick(this, event);"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_SIZE"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_SIZE_DESC">
			<option value="standart">COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_SIZE_STANDART</option>
			<option value="large">COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_SIZE_LARGE</option>
		</field>
		
		<field name="social_twitter_annotation"
			type="_advanced_radio"
			onclick="onRadioTwitterAnnotationClick(this, event);"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_ANNOTATION"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_ANNOTATION_DESC">
			<option value="none">COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_ANNOTATION_NONE</option>
			<option value="horizontal">COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_ANNOTATION_HORIZONTAL</option>
			<option value="vertical">COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_ANNOTATION_VERTICAL</option>
		</field>
		
		<field name="social_twitter_language"
			type="_advanced_list"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_LANGUAGE"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_TWITTER_LANGUAGE_DESC" />
		
		<field name="social_linkedin_use"
			type="radio"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_USE"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_linkedin_annotation"
			type="_advanced_radio"
			onclick="onRadioLinkedinAnnotationClick(this, event);"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_ANNOTATION"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_ANNOTATION_DESC">
			<option value="none">COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_ANNOTATION_NONE</option>
			<option value="right">COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_ANNOTATION_RIGHT</option>
			<option value="top">COM_HTML5FLIPPINGBOOK_BE_CONFIG_LINKEDIN_ANNOTATION_TOP</option>
		</field>
		
		<field name="social_facebook_use"
			type="radio"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_USE"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_facebook_verb"
			type="_advanced_radio"
			onclick="onRadioFacebookVerbClick(this, event);"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_VERB"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_VERB_DESC">
			<option value="like">COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_VERB_LIKE</option>
			<option value="recommend">COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_VERB_RECOMMEND</option>
		</field>
		
		<field name="social_facebook_layout"
			type="_advanced_radio"
			onclick="onRadioFacebookLayoutClick(this, event);"
			class="btn-group"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_LAYOUT"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_LAYOUT_DESC">
			<option value="standart">COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_LAYOUT_STANDART</option>
			<option value="button_count">COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_LAYOUT_BUTTONCOUNT</option>
			<option value="box_count">COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_LAYOUT_BOXCOUNT</option>
		</field>
		
		<field name="social_facebook_font"
			type="_advanced_list"
			label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_FONT"
			description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_FACEBOOK_FONT_DESC" />

		<field name="rules"
			type="rules"
			component="com_html5flippingbook"
			section="component"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL" />

        <field name="social_jomsocial_use"
               type="radio"
               class="btn-group"
               default="0"
               label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_JOMSOCIAL_ENABLE"
               description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_JOMSOCIAL_ENABLE_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="social_email_use"
               type="radio"
               class="btn-group"
               default="0"
               label="COM_HTML5FLIPPINGBOOK_BE_CONFIG_EMAIL_ENABLE"
               description="COM_HTML5FLIPPINGBOOK_BE_CONFIG_EMAIL_ENABLE_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

	</fieldset>
</form>